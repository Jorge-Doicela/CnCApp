# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
# Para desarrollo local con PostgreSQL instalado en tu máquina
DATABASE_URL="postgresql://postgres:TU_PASSWORD@localhost:5432/cnc_db?schema=public"

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# JWT (JSON Web Token)
# ============================================
# IMPORTANTE: Cambia este secreto en producción por uno único y seguro
JWT_SECRET=cnc-jwt-secret-key-development-mode-only
JWT_EXPIRES_IN=7d

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================
# Permite peticiones desde el frontend local
ALLOWED_ORIGINS=http://localhost:8100,http://localhost:4200

# ============================================
# RATE LIMITING (Protección contra ataques)
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# ARCHIVOS
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
